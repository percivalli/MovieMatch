<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutActivityFavoritosDefinidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoMovie"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFavoritosContador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0/20"
            android:textColor="@color/corfonteMovie" />

        <include layout="@layout/content_detalhe_favoritos"></include>


    </LinearLayout>

</LinearLayout>