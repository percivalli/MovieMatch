<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="#283546">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewTitleSimples"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_margin="16dp"
                android:src="@mipmap/filme" />

            <TextView
                android:id="@+id/toolbarTitleSimples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sem_titulo"
                android:gravity="center_horizontal"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:lines="1"
                android:layout_gravity="center"
                android:textColor="@color/corfonteMovie"
                android:textSize="@dimen/text_toolbar" />
    </FrameLayout>

</LinearLayout>

