<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#283546"
    android:elevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewTitleSimples"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/filme" />

        <TextView
            android:id="@+id/toolbarTitleSimples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:lines="1"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/sem_titulo"
            android:textColor="@color/corfonteMovie"
            android:textSize="@dimen/text_toolbar" />
    </FrameLayout>

</LinearLayout>

