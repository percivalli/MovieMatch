<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585280"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#02134B"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CRIAR CONTA/LOGIN"
            android:textColor="#F7FF00"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:background="#976DD0"
            android:padding="2dp"
            android:textColorHint="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="#976DD0"
            android:padding="2dp"
            android:textColorHint="#FFFFFF"
            app:passwordToggleContentDescription="Mostrar"
            app:passwordToggleDrawable="@drawable/eyeoff"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword">

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="#3C4858"
            android:maxLines="1"
            android:padding="20dp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnCriarConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="#3C4858"
            android:maxLines="1"
            android:padding="20dp"
            android:text="CRIAR CONTA"
            android:textAlignment="center"
            android:textColor="#ffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:background="#3C4858"
            android:drawableLeft="@drawable/facebookbox"
            android:id="@+id/btnLoginFacebook"
            android:maxLines="1"
            android:padding="20dp"
            android:text="USAR FACEBOOK"
            android:textAlignment="center"
            android:textColor="#ffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="#3C4858"
            android:drawableLeft="@drawable/google"
            android:id="@+id/btnLoginGoogle"
            android:maxLines="1"
            android:padding="20dp"
            android:text="USAR GOOGLE"
            android:textAlignment="center"
            android:textColor="#ffff" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>