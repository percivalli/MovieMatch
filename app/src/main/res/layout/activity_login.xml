<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585280"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#02134B"
        android:gravity="top"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CRIAR CONTA/LOGIN"
            android:textColor="#F7FF00"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <EditText
        android:id="@+id/textInputLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="#976DD0"
        android:drawableLeft="@drawable/emailpad"
        android:textColorHint="#FFFFFF"
        android:hint="Email"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/lockquestion"
        android:background="#976DD0"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword"
        android:hint="Senha"
        android:maxLines="1"
        android:padding="10dp" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="#3C4858"
        android:text="Prosseguir"
        android:textColor="#ffff"
        android:maxLines="1"
        android:padding="20dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:background="#3C4858"
        android:text="USAR FACEBOOK"
        android:drawableLeft="@drawable/facebookbox"
        android:textColor="#ffff"
        android:maxLines="1"
        android:padding="20dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="#3C4858"
        android:drawableLeft="@drawable/google"
        android:text="USAR GOOGLE"
        android:textColor="#ffff"
        android:maxLines="1"
        android:padding="20dp"
        android:textAlignment="center" />

</LinearLayout>