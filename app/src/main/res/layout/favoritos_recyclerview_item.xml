<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewFavoritosNomeGenero"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/background_arredondado_topico"
                android:gravity="left|center"
                android:paddingStart="80dp"
                android:text="Nome do genero"
                android:textColor="#F7FF00"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewFavoritosLetraGenero"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/background_arredondado_letra"
                android:gravity="center|center"
                android:text="N"
                android:textColor="#996FD0"
                android:textSize="32sp"
                android:textStyle="bold" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButtonFavoritos"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|right"
            android:layout_marginStart="16dp"
            android:backgroundTint="#3C495A"
            android:clickable="true"
            android:tint="#ffffff"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_add_black_24dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>